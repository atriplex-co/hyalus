{
  "name": "client-desktop",
  "version": "0.0.56",
  "license": "AGPL-3.0-only",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -wml",
    "release": "yarn build -p always"
  },
  "build": {
    "appId": "app.hyalus",
    "productName": "Hyalus",
    "extraMetadata": {
      "name": "Hyalus",
      "description": "Talk on an open platform"
    },
    "win": {
      "target": "nsis",
      "artifactName": "HyalusDesktop-win32.exe"
    },
    "mac": {
      "target": "zip",
      "artifactName": "HyalusDesktop-osx.zip",
      "category": "public.app-category.social-networking"
    },
    "linux": {
      "target": "AppImage",
      "artifactName": "HyalusDesktop-linux.AppImage"
    },
    "publish": {
      "provider": "github",
      "repo": "hyalus",
      "owner": "hyalusapp",
      "vPrefixedTagName": false,
      "releaseType": "release"
    },
    "files": [
      "src",
      "build"
    ]
  },
  "dependencies": {
    "@hyalusapp/win32-audio": "hyalusapp/win32-audio#43d5350",
    "electron-updater": "^4.6.1"
  },
  "devDependencies": {
    "electron": "16.0.5",
    "electron-builder": "^22.14.5"
  }
}
